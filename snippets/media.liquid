<div class="{%- if featured_media == media -%} show {% else %} hide{% endif %} featured_media">
{% case media.media_type %}
{% when 'image' %}
<a class="product-single__media" data-media-id="{{ media.id }}" href="{{ media | img_url: 'master'}}">        
  <img id="product-featured-image-{{ media.id }}" class="{{ media_type }}"  src="{{ media | img_url: 'master'}}"  alt="{{ media.alt | escape }}"  data-thumbnail-id="{{ media.id }}">          
</a>
{% when 'external_video' %}
<div class="product-single__media"  data-media-id="{{ media.id }}">
  {{ media | external_video_tag }}
</div>
{% when 'video' %}
<div class="product-single__media" data-media-id="{{ media.id }}">
  {{ media | video_tag: controls: true }}
</div>
{% when 'model' %}
<div class="product-single__media" style="padding-top: 100%" data-media-id="{{ media.id }}">
  {{ media | model_viewer_tag }}
</div>
{% else %}
<div class="product-single__media" style="padding-top: 100%;" data-media-id="{{ media.id }}">
  {{ media | media_tag }}
</div>
{% endcase %}
</div>
