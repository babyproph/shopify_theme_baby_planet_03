<div data-section-id="{{ section.id }}"  data-section-type="About section" class="contact-us">
  {% if section.settings.show_contact_1_page %}
  <div class="contact-page-one">
    {% if section.settings.show_contact_1_iconwrapper %}
    <div class="grid-uniform detail-section">
      <div class="container">
        
        
        {% assign num_contact_columns = 0 %}      

        {%- assign contact_linklist = section.settings.show_contact_1_address %}
        {% if contact_linklist %}
        {% assign num_contact_columns = num_contact_columns | plus: 1 %}
        {% endif %}

        {%- assign contact_linklist = section.settings.show_contact_1_email %}
        {% if contact_linklist %}
        {% assign num_contact_columns = num_contact_columns | plus: 1 %}
        {% endif %}

        {%- assign contact_linklist = section.settings.show_contact_1_phone %}
        {% if contact_linklist %}
        {% assign num_contact_columns = num_contact_columns | plus: 1 %}
        {% endif %}
        
        {%- assign contact_linklist = section.settings.show_contact_1_time %}
        {% if contact_linklist %}
        {% assign num_contact_columns = num_contact_columns | plus: 1 %}
        {% endif %}

        {% case num_contact_columns %}
        {% when 0 %}
        {% when 1 %}
        {% assign contact_column_width = 'text-center' %}
        {% when 2 %}
        {% assign contact_column_width = 'wide--one-half post-large--one-half large--one-half medium--one-half' %}
        {% when 3 %}
        {% assign contact_column_width = 'wide--one-third post-large--one-third large--one-third medium--one-half' %} 
        {% when 4 %}
        {% assign contact_column_width = 'wide--one-quarter post-large--one-quarter large--one-quarter medium--one-half' %}  
{% else %}
        {% assign contact_column_width = 'wide--one-third post-large--one-third large--one-third medium--one-half' %}     
        {% endcase %}
        
        
        
        {%- assign contact_linklist = section.settings.show_contact_1_address -%}
          {% if contact_linklist %}
        <div class="grid__item {{ contact_column_width }} icon-section">
          <div class="icon">
            <span class=""><i class="fa fa-location-arrow" aria-hidden="true"></i></span>
          </div>
          {% if  section.settings.contact_add_heading  != blank %}
          <h4>{{section.settings.contact_add_heading}}</h4>
          {% endif %}
          {% if  section.settings.contact_add_detail  != blank %}
          <p>{{section.settings.contact_add_detail}}</p>
          {% endif %}
        </div>
        {% endif %} 
        
        
        {%- assign contact_linklist = section.settings.show_contact_1_email -%}
          {% if contact_linklist %}
       
        <div class="grid__item {{ contact_column_width }} icon-section">
          <div class="icon">
            <span class=""><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
          </div>
          {% if  section.settings.contact_mail_heading  != blank %}
          <h4>{{section.settings.contact_mail_heading}}</h4>
          {% endif %}
          {% if  section.settings.contact_mail_detail  != blank %}
          <p><a href="">{{section.settings.contact_mail_detail}}</a></p>
          {% endif %}
        </div>
        {% endif %} 
        
        
         {%- assign contact_linklist = section.settings.show_contact_1_phone -%}
          {% if contact_linklist %}
        <div class="grid__item {{ contact_column_width }} icon-section">
          <div class="icon">
            <span class=""><i class="fa fa-phone" aria-hidden="true"></i></span>
          </div>
          {% if  section.settings.contact_phone_heading  != blank %}
          <h4>{{section.settings.contact_phone_heading}}</h4>
          {% endif %}
          {% if  section.settings.contact_phone_detail  != blank %}
          <p>{{section.settings.contact_phone_detail}}</p>
          {% endif %}
        </div>
        {% endif %}
        
         {%- assign contact_linklist = section.settings.show_contact_1_time -%}
          {% if contact_linklist %}
        <div class="grid__item {{ contact_column_width }} icon-section">
          <div class="icon">
            <span class=""><i class="fa fa-clock-o" aria-hidden="true"></i></span>
          </div>
          {% if  section.settings.contact_time_heading  != blank %}
          <h4>{{section.settings.contact_time_heading}}</h4>
          {% endif %}
          {% if  section.settings.contact_time_detail  != blank %}
          <p>{{section.settings.contact_time_detail}}</p>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
    {% endif %} 
    <div class="grid-uniform">
      {% if section.settings.enable_gmap %}
      <div class="map-section">
        <div id="map">{{ section.settings.contact_iframe_code }} </div>
      </div>
      {% endif %} 
      {% if section.settings.show_contact_1_contactform %}
      <div class="container">
        <div class="contact">
          {% form 'contact' %}
          <div class="grid__item contact-frm">
            {% if  section.settings.contact_form_heading  != blank %}
            <h3>{{section.settings.contact_form_heading}}</h3>
            <div class="header-border"></div>
            {% endif %}
            <div class="grid__item wide--one-half post-large--one-half large--one-half medium--grid__item">
              {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
              {% endif %}
              {{ form.errors | default_errors }}
              {% assign name_attr = 'contact.form.name' | t | handle %}
              <label for="ContactFormName" class="label--hidden">{{ 'contact.form.name' | t }}</label>
              <input type="text" id="ContactFormName" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}">
              <label for="ContactFormEmail" class="label--hidden">{{ 'contact.form.email' | t }}</label>
              <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              {% assign name_attr = 'contact.form.phone' | t | handle %}
              <label for="ContactFormPhone" class="label--hidden"></label>
              <input type="tel" id="ContactFormPhone" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
            </div>
            <div class="grid__item wide--one-half post-large--one-half large--one-half medium--grid__item">
              <label for="ContactFormMessage" class="label--hidden">{{ 'contact.form.message' | t }}</label>
              <textarea rows="7" id="ContactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              <button  class="contact-btn" >{{ 'contact.form.send' | t }}</button>
            </div>
          </div>
          {% endform %}
        </div>
      </div>
      {% endif %} 
    </div>
    {% if section.settings.show_contact_1_socialicon %}
    <div class="grid-uniform social-icon-wrapper">
      <div class="wrapper">
        <ul class="social-icon">
          {% if section.settings.show_contact_1_facebook %}
          <li><a href="{{settings.contact_1_facebook}}"><i class="{{section.settings.contact_1_icon}}" aria-hidden="true"></i></a></li>
          {% endif %}
          {% if section.settings.show_contact_1_twitter %}
          <li><a href="{{settings.contact_1_twitter}}"><i class="{{section.settings.contact_2_icon}}" aria-hidden="true"></i></a></li>
          {% endif %}
          {% if section.settings.show_contact_1_googleplus%}
          <li><a href="{{settings.contact_1_googleplus}}"><i class="{{section.settings.contact_3_icon}}" aria-hidden="true"></i></a></li>
          {% endif %}
          {% if section.settings.show_contact_1_youtube%}
          <li><a href="{{settings.contact_1_youtube}}"><i class="{{section.settings.contact_4_icon}}" aria-hidden="true"></i></a></li>
          {% endif %}
          {% if section.settings.show_contact_1_pinterest%}
          <li><a href="{{settings.contact_1_pinterest}}"><i class="{{section.settings.contact_5_icon}}" aria-hidden="true"></i></a></li>
          {% endif %}
        </ul>
      </div>
    </div>
    {% endif %} 
  </div>
  {% endif %} 
</div>















<style>

  {% if section.settings.enable_gmap %} .contact-page-one .contact {  margin-top: -200px; } {% endif %}
  
  .contact-page-one .icon span {background:{{section.settings.contact_1_iconbg}};}

  .contact-page-one .icon span {color: {{section.settings.contact_1_iconcolor}};}

  .contact-page-one .icon-section:hover .icon span::after {background: {{section.settings.contact_1_iconhoverbg}};}

  .contact-page-one h4{color:{{section.settings.contact_1_iconheadingcolor}};}

  .contact-page-one .detail-section p {color: {{section.settings.contact_1_icondetailcolor}};}

  .contact-page-one h3{color:{{section.settings.contact_1_formheadingcolor}};}

  .contact-page-one .header-border {background:{{section.settings.contact_1_formheadingbordercolor}};}

  .contact-page-one .contact-frm {background: {{section.settings.contact_1_formbgcolor}};}

  .contact-page-one .header-border::after { border-bottom: 3px solid {{section.settings.contact_1_formheadingbordercolor}};}

  .contact-page-one .contact{ border-bottom: 1px solid {{section.settings.contact_1_formborder}};}

  .contact-page-one .contact-btn { background: {{section.settings.contact_1_formbtnbg}};color:{{section.settings.contact_1_formbtncolor}};}

  .contact-page-one .contact-btn:hover{background:{{section.settings.contact_1_formbtnhoverbg}};color:{{section.settings.contact_1_formbtnhovercolor}};}

  .contact-page-one .social-icon a {color: {{section.settings.contact_1_socialiconcolor}};}

  .contact-page-one .social-icon a:hover::after{background:{{section.settings.contact_1_socialiconhoverbg}};}

  .contact-page-one .social-icon a:hover{color:{{section.settings.contact_1_socialiconhovercolor}};}

  .contact-page-one a{color:{{section.settings.contact_1_linkcolor}};transition: all 0.3s linear 0s;}

  .contact-page-one a:hover{color:{{section.settings.contact_1_linkhovercolor}};}



</style>





























