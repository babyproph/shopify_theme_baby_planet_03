<div data-section-id="{{ section.id }}" data-section-type="wide-banner-type-5" class="wide-banner-type-5">  
  <div class="grid-uniform">    
    <div class="wide-banner-type-5-block" style="{% if section.settings.image_1 == blank %}background-color:{{section.settings.background_color}}{% endif %};">      
       <div class="wide-banner-type-5-content">
      
      {% if section.settings.image_1 != blank %} <img src="{{ section.settings.image_1 | img_url: '1920X' }}" alt= "{{ section.settings.title_1 }}"> {%endif %}
      
        
          <div class="wide-banner-type-5-rounded">
            {% if section.settings.titleshadow_1 != blank %}
            <span style="color:{{ section.settings.shadowtext_color }}">{{ section.settings.titleshadow_1 }}</span>
            {% endif %}

            {% if section.settings.title_1 != blank %}
            <h2 style="color:{{ section.settings.title_color }}">{{ section.settings.title_1 }}</h2>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <p style="color:{{ section.settings.text_color }}">{{ section.settings.text_1 }}</p>
            {% endif %}
            {% if section.settings.button_1 != blank %}
            <div class="grid-uniform">  
              <a class="btn" href="{{ section.settings.link_1 }}">{{ section.settings.button_1 }}</a>    
            </div>
            {% endif %}         
          </div> 
        </div>
        <style>
          .wide-banner-type-2-content a.btn { color:{{ section.settings.button_txt_color }};background:none;border:2px solid {{ section.settings.button_bg_color }}; }
          .wide-banner-type-2-content a.btn:hover { border:2px solid {{ section.settings.hover_button_bg_color }}; background-color:{{ section.settings.hover_button_bg_color }} ; color:{{ section.settings.hover_button_txt_color }} ;}
        </style>
      </div>

    </div>
  </div>
  <div class="dt-sc-hr-invisible-large"></div>
  {% schema %}
  {
  "name": "Wide Banner",
  "class": "index-section",
  "settings": [
  
  {
  "type": "image_picker",
  "id": "image_1",
  "label": "Image",
  "info": "Size: 1750x720"
  },
  {
  "type": "color",
  "id": "background_color",
  "label":"Bckground color",
  "default": "#000"
  },
  {
  "type": "text",
  "id": "title_1",
  "label": "Heading"
  },
  {
  "type": "color",
  "id": "title_color",
  "label":"Title color",
  "default": "#000"
  },
  {
  "type": "textarea",
  "id": "text_1",
  "label": "Description"
  },
  {
  "type": "color",
  "id": "text_color",
  "label":"Text color",
  "default": "#000"
  },
  {
  "type": "text",
  "id": "titleshadow_1",
  "label": "Sub Heading"
  },
  {
  "type": "color",
  "id": "shadowtext_color",
  "label":"Text color",
  "default": "#000"
  },
  {
  "type": "text",
  "id": "button_1",
  "label": "Button text"
  },
  {
  "type": "color",
  "id": "button_bg_color",
  "label":"Border color",
  "default": "#000"
  },
  {
  "type": "color",
  "id": "button_txt_color",
  "label":"Text color",
  "default": "#fff"
  },
  {
  "type": "color",
  "id": "hover_button_bg_color",
  "label":"Hover Background color",
  "default": "#000"
  },
  {
  "type": "color",
  "id": "hover_button_txt_color",
  "label":"Hover Text color",
  "default": "#fff"
  },
  {
  "type": "url",
  "id": "link_1",
  "label": "Link URL"
  }
  ],
  "presets": [
  {
  "name": "Wide Banner",
  "category": "Image",
  "blocks": []
  }
  ]
  }
  {% endschema %}


