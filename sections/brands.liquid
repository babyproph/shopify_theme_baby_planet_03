<div data-section-id="{{ section.id }}"  data-section-type="client section" class="client-section">
 {% if section.blocks.size > 0 %}    
  <div class="grid-uniform section-seven">
      <div class="grid__item widget" style="background:{{ section.settings.sidebar_bg_color }}">
        {% if section.settings.title != blank %}
        <h4><span>{{ section.settings.title }}</span></h4>
        {% endif %}        
        <div id="client-car" class="client-section owl-carousel owl-theme">
          {% for block in section.blocks %}
          {% if block.settings.client_img != blank %}
          <div class="item">
            <a href="{{ block.settings.client_link }}"> <img src="{{ block.settings.client_img | img_url: "master"  }}" alt="{{ block.settings.client_heading }}" /></a>
          </div>
          {% else %}          
          <div class="item"><a href="#">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</a></div>
           {% endif %}           
          {% endfor %}
        </div>
      </div>
  </div>
  {% endif %} 
</div>

{% schema %}
{
"name": "Client Logo",
"class": "index-section",
"settings": [
{
"type": "color",
"id": "sidebar_bg_color",
"label": "Bg Color",
"default": "#fff"
},
	{
"type": "text",
"id": "title",
"label": "Heading"
}

],
"blocks": [
{
"type": "Image",
"name":"client img",
"settings": [
{
"type": "image_picker",
"id": "client_img",
"label": "Image",
"info": "Size: 185x60"
},
{
"type": "text",
"id": "client_heading",
"label": "text"
},
{
"type": "url",
"id": "client_link",
"label": "Link URL"
}
]
}
]

}
{% endschema %}





{% javascript %}



$(document).ready(function() {
jQuery("#client-car").owlCarousel({   
       loop:true,
        margin:10,
        nav:false,       
        dots: true,
        responsive:{
            0:{
                items:1
            },
            600:{
                items:3
            },
            1000:{
                items:6
            }
        }
    });
  });




{% endjavascript %}