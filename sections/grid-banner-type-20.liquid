<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-20" class="grid-banner-type-20">   
  <div class="grid-uniform featuredItems">  

    {% if section.blocks.size > 0 %}  
    {% assign row = "grid__item wide--two-thirds post-large--two-thirds large--two-thirds medium--grid__item small--grid__item small--text-center center-section center-section" %}
    {% assign row1 = "grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center right-side" %}
    {% else %}
    {% assign row = "grid__item" %}
    {% endif %}

{% if section.blocks.size > 0 %}     
    <div class="{% if section.settings.disable_right_promo %}grid__item{% else %}{{ row }}{% endif %}">
      <div id="home-slider-wrapper">
        <ul class="loop owl-carousel owl-theme">
          {% for block in section.blocks %}
          <li class="slider_{{forloop.index }}_loop">
            <div class="ovrly31 overlay_1">
            {% if block.settings.slide_1_link != blank %}<a href="{{ block.settings.slide_1_link }}">{% endif %}
            
            {% if block.settings.slideshow_1_img != blank %}
             {% if section.settings.disable_right_promo %}
            <img src="{{ block.settings.slideshow_1_img | img_url: "900x" }}" alt="{{ block.settings.slider1_title  }}" title="{{ block.settings.slider1_title  }}"  />    
          <div class="ovrly"></div>
            {% else %}
            <img src="{{ block.settings.slideshow_1_img | img_url: "880x755" }}" alt="{{ block.settings.slider1_title  }}" title="{{ block.settings.slider1_title  }}"  />       
          <div class="ovrly"></div>
{% endif %}
            
            {% else %}
             {% if section.settings.disable_right_promo %}
            <img src="//via.placeholder.com/1920x700">
            {% else%}
            <img src="//via.placeholder.com/880x755">
            {% endif %}
            {% endif %}
            <div class="slider-des">
              {% if block.settings.slider1_title != blank %}<h2 style="color:{{ block.settings.slide_1_heading }}">{{ block.settings.slider1_title  }}</h2>{% endif %}
              {% if block.settings.slider1_subtitle != blank %}<h3 style="color:{{ block.settings.slide_1_subheading }}">{{ block.settings.slider1_subtitle  }}</h3>{% endif %}
              {% if block.settings.slider1_content != blank %}<p style="color:{{ block.settings.slide_1_desc }}"> {{ block.settings.slider1_content }} </p>{% endif %}
              {% if block.settings.slide_1_btn_txt != blank %}<a class="" href="{{ block.settings.slide_1_link }}"> {{ block.settings.slide_1_btn_txt }} </a>{% endif %}
            </div>
            {% if block.settings.slide_1_link != blank %}</a>{% endif %}        
            </div>
          </li>

          {% endfor %}
        </ul>	
        <div class="divas-navigation"></div>
      </div>	
    </div>      
    {% endif %}
{% unless section.settings.disable_right_promo %}
    <div class="grid__item {{row1}}">
      <div class="middle-top grid__item"> 
        <div class="ovrly31 overlay_2">
          {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
          {% if section.settings.image_1 != blank %}
          <img src="{{ section.settings.image_1 | img_url: '900x' }}" alt="{{ section.settings.title_1 }}" />
          <div class="ovrly"></div>
          {% else %}
          <img src="//via.placeholder.com/700x600">
          {% endif%}           
          {% if section.settings.link_1 != blank %}  </a>

          {% endif%}
          <div class="featured-content">       
            {% if section.settings.title_1 != blank %}
            <h6 style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h6>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <h3 style="color:{{ section.settings.text_1_clr }};">{{ section.settings.text_1}}</h3>    
            {% endif %}  
            {% if section.settings.button_1 != blank %}
            <a class="one" href="{{ section.settings.link_1 }}" style="padding:0;color:{{ section.settings.button_1_txt}};background:none;border-bottom:2px solid {{ section.settings.button_1_bg}};">{{ section.settings.button_1}}</a>    
            {% endif %}               
          </div> 
        </div>
      </div>
      <div class="middle-bottom grid__item">        
        <div class="ovrly31 overlay_3">
          {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
          {% if section.settings.image_2 != blank %}
          <img src="{{ section.settings.image_2 | img_url: '900x' }}" alt="{{ section.settings.title_2 }}" />
          <div class="ovrly"></div>
          {% else %}

          <img src="//via.placeholder.com/700x600">
          {% endif%}           
          {% if section.settings.link_2 != blank %}  </a>

          {% endif%}
          <div class="featured-content">       
            {% if section.settings.title_2 != blank %}
            <h6 style="color:{{ section.settings.title_2_clr }};">{{ section.settings.title_2 }}</h6>
            {% endif %}
            {% if section.settings.text_2 != blank %}
            <h3 style="color:{{ section.settings.text_2_clr }};">{{ section.settings.text_2}}</h3>    
            {% endif %}  
            {% if section.settings.button_2 != blank %}
            <a class="two" href="{{ section.settings.link_2 }}" style="padding:0;color:{{ section.settings.button_2_txt}};background:none;border-bottom:2px solid {{ section.settings.button_2_bg}};">{{ section.settings.button_2}}</a>    
            {% endif %}   
          </div>  
        </div>
      </div>
    </div>
    {% endunless %}

    <style>
      .grid-banner-type-20 .featured-content .two:hover { color:{{ section.settings.hover_button_2_txt}} !important;border-bottom:2px solid {{ section.settings.hover_button_2_bg}} !important; }
      .grid-banner-type-20 .featured-content .one:hover { color:{{ section.settings.hover_button_1_txt}} !important;border-bottom:2px solid {{ section.settings.hover_button_1_bg}} !important; }
      {% if section.settings.overlay_1_use %} .grid-banner-type-20 .ovrly31.overlay_2 .ovrly { background:{{ section.settings.overlay_1 | color_modify: 'alpha', 0.7 }};  } {% endif %}
      {% if section.settings.overlay_2_use %}.grid-banner-type-20 .ovrly31.overlay_3 .ovrly { background:{{ section.settings.overlay_2 | color_modify: 'alpha', 0.7 }};  } {% endif %}
      {% if section.settings.overlay_5_use %} .grid-banner-type-20 .ovrly31.overlay_1 .ovrly { background:{{ section.settings.overlay_5 | color_modify: 'alpha', 0.7 }};  } {% endif %}

      #home-slider-wrapper:hover .divas-navigation a.next,#home-slider-wrapper:hover .divas-navigation a.prev {opacity:1; }
      {% for block in section.blocks %}
      #home-slider-wrapper ul li.slider_{{forloop.index }}_loop .slider-des a { background:none;padding:0;color:{{ block.settings.slide_1_btn }};border-bottom:2px solid {{ block.settings.slide_1_btn }};  }       
      #home-slider-wrapper ul li.slider_{{forloop.index }}_loop .slider-des a:hover { color:{{ block.settings.slide_1_btn_hover_txt }};border-bottom:2px solid {{ block.settings.slide_1_btn_hover_txt }};  }
      {% if block.settings.overlay_5_use %} .grid-banner-type-20 #home-slider-wrapper ul li.slider_{{forloop.index }}_loop  .ovrly31.overlay_1 .ovrly { background:{{ block.settings.overlay_5 | color_modify: 'alpha', 0.7 }};  } {% endif %}
      
      {% endfor %}
    </style>
  </div>    
</div>

<script>
  jQuery(document).ready(function($) {
    $('.loop').owlCarousel({
      center: true,
      items:1,
      loop:true,      
      dots: false,
      navContainer: ".divas-navigation",
      navText: ['<a class="prev btn"><i class="icon-arrow-left" ></i></a>','<a class="next btn"><i class="icon-arrow-right" ></i></a>'],
      autoplay: true,
      autoplayTimeout: 3500,
      responsive:{
        0:{
          items: 1
        },
        600:{
          items:1
        },
        1000:{
          items: 1
        }
      }


    });
  });

</script>

